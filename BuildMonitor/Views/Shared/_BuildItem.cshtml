@model BuildMonitor.Models.Home.Build

<div id="BuildDiv-@Model.Id" class="col-sm-6 col-md-6 col-lg-2 buildItem">
    <a href="@Model.WebUrl">
        <div class="well  build-@Model.Status">
            <h4 class="buildTitle text-cutoff">@Model.Name</h4>
            <h2 class="status-@Model.Status text-cutoff">@Model.StatusText</h2>
            <p class="buildInfo text-cutoff">@Model.StatusDescription</p>
            @if (!string.IsNullOrEmpty(Model.buildText))
            {
                <p class="buildDescription">@Model.buildText</p>
            }
            <p class="buildInfoBranch text-cutoff">
                Branch: <span class="buildInfoHighlight">@Model.Branch</span><br />
                Committer: <span class="buildInfoHighlight">@Model.lastUser</span>
                @if (!string.IsNullOrWhiteSpace(Model.Progress))
                {
                    <span> ▪ job <span class="buildInfoProgressHighlight"> @Model.Progress </span>done</span>
                }
                else if (Model.IsQueued)
                {
                    <span> ▪ </span><span class="buildInfoProgressHighlight">queued</span>
                }
            </p>
            <p class="buildInfo text-cutoff">Last updated @Model.LastRunText</p>
        </div>
    </a>
</div>